---
import FullScreenCard from "./FullScreenCard.astro";
import avatar from "../assets/avatar.png";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
---

<style>
    .info-card {
        width: 100%;
        height: 100%;

        display: flex;
        justify-content: center;
        align-items: center;
    }

    .info-card > * {
        margin-right: 20px;
    }

    .name {
        font-weight: bolder;
        font-size: 32pt;
    }
    
    .description {
        font-size: 14pt;
    }

    .avatar {
        max-width: 200px;
        max-height: 200px;

        border-radius: 50%;
    }
</style>

<FullScreenCard>
    <div class="info-card">
        <Image src={avatar} alt="Ata avatar" class="avatar" />
        <div>
            <div class="name">
                prefetcher
            </div>
            <div class="links">
                <Icon name="ri:bluesky-fill" />
                <Icon name="ri:mail-fill" />
                <Icon name="ri:discord-fill" />
                <Icon name="ri:github-fill" />
            </div>
        </div>
    </div>
    <Icon name="ri:arrow-down-double-fill" size="60" class="arrow" />
</FullScreenCard>